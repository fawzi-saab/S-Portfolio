 <%= form_for @profile, url: user_profile_path, html: { multipart: true } do |f| %>
                <div class="form-group">
                    <%= f.label :first_name %>
                    <%= f.text_field :first_name, class:"form-control", required: true %>
                </div>
                <div class="form-group">
                    <%= f.label :last_name %>
                    <%= f.text_field :last_name, class:"form-control", required: true %>
                </div>
                <div class="form-group">
                	<%= f.label :avatar %>
                	<%= f.file_field :avatar, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :phone_number %>
                    <%= f.text_field :phone_number, class:"form-control", required: true %>
                </div>
                <div class="form-group">
                    <%= f.label :contact_email %>
                    <%= f.text_field :contact_email, class:"form-control", required: true %>
                </div>
                <div class="form-inline">
                    <div class="form-group">
                        <%= f.label :country%>
                        <%= f.text_field :country, class:"form-control", required: true %>
                    </div>
                    <div class="form-group">
                        <%= f.label :city %>
                        <%= f.text_field :city, class:"form-control" %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :profession %>
                    <%= f.text_field :profession, class:"form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :years_of_experience %>
                    <%= f.number_field :years_of_experience, class:"form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :fb_link, "Facebook Profile" %>
                    <%= f.text_field :fb_link, class:"form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :lkd_link, "Linked-in Profile" %>
                    <%= f.text_field :lkd_link, class:"form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :github_link, "Github Profile" %>
                    <%= f.text_field :github_link, class:"form-control" %>
                </div>
                 <div class="form-group">
                    <%= f.label :background_overview %>
                    <%= f.text_area :background_overview, class:"form-control" %>
                </div>
                <div class="form-group">
                    <%= f.submit "Update profile", class: "btn btn-primary" %>
                </div>
            <% end %>