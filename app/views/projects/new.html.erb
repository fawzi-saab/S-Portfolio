<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="well bg-color">
            <h2 class="text-center">Add Project</h2>
           <%= form_for @project, url: user_profile_projects_path, html: { multipart: true } do |f| %>
                <div class="form-group">
                    <%= f.label :title %>
                    <%= f.text_field :title, class:"form-control", required: true %>
                </div>
                <div class="form-group">
                	<%= f.label :avatar, "Project image" %>
                	<%= f.file_field :avatar, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :project_description %>
                    <%= f.text_area :project_description, class:"form-control" ,required: true%>
                </div>

                <div class="form-group">
                    <%= f.label :project_link %>
                    <%= f.text_field :project_link, class:"form-control" %>
                </div>

                <div class="form-group">
                    <%= f.submit "Add", class: "btn btn-primary" %>
                </div>
                
            <% end %>
        </div>
    </div>
</div>