<div class= "row">
    <div class="col-md-8 project-img">
        <%= image_tag @project.avatar.url %>
    </div>
    <div class="well content col-md-4 bg-color">
        <h2><%= @project.title %></h2>
        <h4>Project description:</h4>
        <P><%= @project.project_description %></p>
        <% if @project.project_link != "" %>
            <a href= "<%= @project.project_link %>" class="btn btn-info btn-lg" >Visit</a>
        <% end %>
    </div>
</div>