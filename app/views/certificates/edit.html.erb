<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="well bg-color">
            <h2 class="text-center">Edit Certificate</h2>
           <%= form_for @certificate, url: user_profile_certificate_path, html: { multipart: true } do |f| %>
                <div class="form-group">
                    <%= f.label :title %>
                    <%= f.text_field :title, class:"form-control",required: true %>
                </div>
                <div class="form-group">
                	<%= f.label :avatar, "Certificate" %>
                	<%= f.file_field :avatar, class: 'form-control'%>
                </div>
                

                <div class="form-group">
                    <%= f.label :institute %>
                    <%= f.text_field :institute, class:"form-control" ,required: true%>
                </div>

                <div class="form-group">
                    <%= f.submit "Update", class: "btn btn-info" %>
                </div>
                
            <% end %>
        </div>
    </div>
</div>