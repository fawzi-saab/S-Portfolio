
<h3>Certificates:</h3>
<table class="table ">
    <thead>
        <tr>
          <th scope="col">Image</th>
          <th scope="col">Title</th>
          <th scope="col">Institute</th>
        </tr>
    </thead>
    <tbody>
        <% @certificate.each do |certificate| %>
            <tr>
              <td><%= image_tag certificate.avatar.url(:thumb) %></td>
              <td><%= certificate.title.capitalize %></td>
              <td><%= certificate.institute.capitalize %></td>
              <td><%= link_to "View", user_profile_certificate_path(params[:id], certificate), class:"btn btn-default btn-sm" %>
               <% if user_signed_in? && current_user == @user %>
                  <%= link_to "Edit", edit_user_profile_certificate_path(current_user, certificate), class: "btn btn-info btn-sm" %>
                  <%= link_to "Delete", user_profile_certificate_path(current_user, certificate), class: "btn btn-info btn-sm", method: "delete" %>
              <% end %></td>
            </tr>
        <% end %>
    </tbody>
</table>