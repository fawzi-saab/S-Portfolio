
<h3>Projects:</h3>
<table class="table">
    <thead>
        <tr>
          <th scope="col">Image</th>
          <th scope="col">Title</th>
        </tr>
    </thead>
    <tbody>
        <% @project.each do |project| %>
            <tr>
              <td><%= image_tag project.avatar.url(:thumb) %></td>
              <td><%= project.title %></td>
              <td><%= link_to "Details", user_profile_project_path(params[:id], project),class: "btn btn-default btn-sm" %>
               <% if user_signed_in? && current_user == @user %>
                  <%= link_to "Edit", edit_user_profile_project_path(current_user, project), class: "btn btn-info btn-sm" %>
                  <%= link_to "Delete", user_profile_project_path(current_user, project), class: "btn btn-info btn-sm", method: "delete" %>
              <% end %></td>
            </tr>
        <% end %>
    </tbody>
</table>